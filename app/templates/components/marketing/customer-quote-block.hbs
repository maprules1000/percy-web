<div class="bg-gray-pattern mb-9 pt-8 sm:pt-16 pb-4 sm:pb-8 border-b">
  <div class="flex">
    <div class="siema container-lg mb-4">
      {{#each quoteBlock.customerQuotes as |quote|}}
        {{marketing/customer-quote quote=quote}}
      {{/each}}
    </div>
  </div>
  <div class="flex items-center justify-center mb-4">
    {{#each quoteBlock.customerQuotes as |quote index|}}
      <div class="bg-purple-600 rounded-full mx-sm w-1 h-1 cursor-pointer {{if (eq index currentSlide) "w-2 h-2" "opacity-50"}}" {{action "switchToSlide" index}} data-test-quote-block-dot></div>
    {{/each}}
  </div>
</div>
